<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.Simple_desktop"
          android:versionCode="1"
          android:versionName="1.0">

  <!-- 权限声明：设置壁纸、查询所有应用、读取外部存储、震动 -->
  <uses-permission android:name="android.permission.SET_WALLPAPER"/>
  <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"/>
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.VIBRATE"/>

  <application
      android:allowBackup="false"
      android:label="@string/app_name"
      android:theme="@style/AppTheme"
      android:requestLegacyExternalStorage="true">

    <!-- 主桌面Activity，配置为HOME启动器 -->
    <activity android:name=".MainActivity"
              android:label="@string/app_name"
              android:exported="true"
              android:launchMode="singleTask"
              android:stateNotNeeded="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.HOME" />
        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <!-- 设置Activity -->
    <activity android:name=".SettingsActivity"
              android:label="@string/settings_title"
              android:exported="false"/>

    <!-- 应用管理Activity -->
    <activity android:name=".AppManagerActivity"
              android:label="@string/app_manager_title"
              android:exported="false"/>

    <!-- 布局配置Activity -->
    <activity android:name=".LayoutConfigActivity"
              android:label="@string/layout_config_title"
              android:exported="false"/>

    <!-- 应用顺序调整Activity -->
    <activity android:name=".ReorderAppsActivity"
              android:label="@string/reorder_apps_title"
              android:exported="false"/>

  </application>
</manifest>
